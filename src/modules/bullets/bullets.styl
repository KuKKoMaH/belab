.bullets
  padding: 60px 0 100px

  &:before, &:after
    content:''
    background: #ffffff

  @media (max-width: $breakpoint-sm - 1)
    padding: 30px 0 50px

  &__title
    padding: 0 0 81px
    @media (max-width: $breakpoint-sm - 1)
      padding-bottom: 40px

  &__items
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    margin-bottom: 40px

    @media (max-width: $breakpoint-sm - 1)
      padding: 0 10px

  &__item
    width: 25%
    padding: 0 30px
    margin-bottom: 45px

    @media (max-width: $breakpoint-md - 1)
      width: 50%

    @media (max-width: $breakpoint-sm - 1)
      width: 100%
      //margin-bottom: 25px
      padding: 0px

    &:before
      content: ''
      display: block

    &--1:before
      background: url(../img/sprite-1.svg)
    &--2:before
      background: url(../img/sprite-2.svg)
    &--3:before
      background: url(../img/sprite-3.svg)
    &--4:before
      background: url(../img/sprite-4.svg)
    &--5:before
      background: url(../img/sprite-5.svg)
    &--6:before
      background: url(../img/sprite-6.svg)
    &--7:before
      background: url(../img/sprite-7.svg)
    &--8:before
      background: url(../img/sprite-8.svg)

  &__header
    font-size: 20px
    font-weight: 600
    padding: 22px 0
    @media (max-width: $breakpoint-sm - 1)
      padding: 8px 0
      br
        display: none

  &__text
    font-size: 16px
    line-height: 24px
    color: #79747c

  &__button
    text-align: center