.programs
  padding: 100px 0 150px
  background: linear-gradient(180deg, #F2F8FF 0%, #FDF4FB 98.61%)
  @media (max-width $breakpoint-sm - 1)
    padding: 50px 0 75px

  &:after
    content:''
    background: #fff4fb

  &__title
    margin-bottom: 50px

  &__items
    display: flex
    flex-direction: row
    align-items: flex-start
    justify-content: center
    flex-wrap: wrap

  &__item
    //flex:1
    margin: 0 15px
    background: #FFFFFF
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.05)
    border-radius: 6px
    padding: 33px 18px 46px
    margin-bottom: 25px

    @media (max-width $breakpoint-lg - 1)
      min-width: auto
      max-width: none
      width: 100%
      flex: 1 0 auto

  &__subheader
    font-size: 12px
    font-weight: 600
    text-transform: uppercase
    color: #861FC0
    margin-bottom: 8px
    
  &__header
    font-size: 24px
    font-weight: 600
    margin-bottom: 23px

  &__bullet
    font-size: 16px
    line-height: 24px
    color: #79747c
    margin-bottom: 20px
    @media (max-width $breakpoint-lg - 1)
      margin-bottom: 12px

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      width: 5px
      height: 5px
      border-radius: 50%
      background: #9200c7
      margin-left: 2px
      margin-right: 6px

  &__price
    text-align: center
    font-size: 30px

  &__oldprice
    text-align: center
    font-size: 16px
    line-height: 24px
    color: #79747c

  &__button
    text-align: center
    margin-top: 12px