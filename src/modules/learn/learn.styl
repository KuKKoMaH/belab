.learn
  padding: 80px 0 130px
  background: linear-gradient(180deg, #F2F8FF 0%, #FDF4FB 100%)
  @media (max-width $breakpoint-sm - 1)
    padding: 40px 0 70px

  &__title
    margin-bottom: 22px

  &__subtitle
    margin-bottom: 40px

  &__items
    display: flex
    flex-direction: row
    justify-content: space-between
    margin-bottom: 80px
    flex-wrap: wrap

  &__item
    max-width: 230px
    @media (max-width $breakpoint-md - 1)
      max-width: none
      width: 50%
    @media (max-width $breakpoint-sm - 1)
      width: 100%
      text-align: center
      margin-bottom: 25px

  &__header
    font-size: 20px
    font-weight: 600
    margin-top: 18px
    margin-bottom: 22px
    @media (max-width $breakpoint-sm - 1)
      margin-top: 9px
      margin-bottom: 11px

  &__text
    font-size: 16px
    line-height: 24px
    color: #79747c

  &__button
    text-align: center