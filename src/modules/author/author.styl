.author
  position: relative
  padding: 90px 0 122px
  background: linear-gradient(180deg, #F2F8FF 0%, #FDF4FB 100%)
  @media(max-width: $breakpoint-sm - 1)
    padding: 45px 0 60px

  &__subtitle
    font-size: 14px
    color: #c7cad4
    margin: 0 0 3px
    font-weight: 600
    @media(max-width: $breakpoint-sm - 1)
      text-align: center

  &__title
    font-size: 36px
    margin: 0 0 58px
    font-weight: 600
    @media(max-width: $breakpoint-sm - 1)
      text-align: center
      margin: 0 0 25px

  &__items
    display: flex
    flex-direction: row
    justify-content: space-between
    margin-bottom: 58px

    @media(max-width: $breakpoint-sm - 1)
      flex-direction: column
      margin-bottom: 20px

  &__photo
    text-align: center

  &__medias
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    margin-top: 20px

  &__media
    margin: 0 19px
    &--vk
      background: url(../../img/sprite-vk.svg)
    &--inst
      background: url(../../img/sprite-inst.svg)
    &--fb
      background: url(../../img/sprite-fb.svg)

  &__bullets
    margin-top: 14px
    margin-left: 20px

  &__bullet
    position: relative
    font-size: 16px
    color: #79747c
    margin-bottom: 20px
    padding-left: 24px

    &:before
      content: ''
      display: block
      position: absolute
      left: 0
      top: 6px
      background: url(../../img/sprite-bullet.svg)

  &__works
    text-align: center
    margin-top: 20px

  &__work
    margin-bottom: 80px

    @media(max-width: $breakpoint-sm - 1)
      margin-bottom: 20px

    &:last-child
      margin-bottom: 0

    &-image
      display: block
      margin: 0 auto 17px
      &--1
        background: url(../../img/sprite-partner-1.svg)
      &--2
        background: url(../../img/sprite-partner-2.svg)

    &-title
      font-size: 16px
      color: #79747c

  &__button
    display: block
    margin: 0 auto
    background: #F7E7F9
    color: #8019BA