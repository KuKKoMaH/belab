.program
  padding: 65px 0 107px
  @media (max-width $breakpoint-sm - 1)
    padding: 35px 0 55px

  &:before,&:after
    content: ''
    background: #ffffff

  &__title
    margin: 0 0 16px

  &__subtitle
    margin-bottom: 48px
    @media (max-width $breakpoint-sm - 1)
      margin-bottom: 24px

  &__bullets
    background: linear-gradient(180deg, #F7FBFF 0%, #FBF8FA 100%)
    border-radius: 16px
    display: flex
    align-items: center
    justify-content: space-around
    padding: 20px 0
    margin-bottom: 45px

    @media (max-width $breakpoint-sm - 1)
      flex-direction: column

  &__bullet-icon
    display: flex
    align-items: center
    justify-content: center
    height: 38px

    &:before
      content: ''
      display: block
    &--1:before
      background: url(../../img/sprite-program-1.svg)
    &--2:before
      background: url(../../img/sprite-program-2.svg)
    &--3:before
      background: url(../../img/sprite-program-3.svg)
    &--4:before
      background: url(../../img/sprite-program-4.svg)
    &--5:before
      background: url(../../img/sprite-program-5.svg)

  &__items
    display: flex
    align-items: flex-start
    justify-content: space-around
    flex-wrap: wrap
    margin-bottom: 45px
    @media (max-width $breakpoint-sm - 1)
      margin-bottom: 10px

  &__item
    width: 20%
    min-width: 220px
    padding: 0 4px

    @media (max-width $breakpoint-sm - 1)
      width: 100%
      margin-bottom: 24px

  &__image
    display: block
    margin: 0 auto 24px

  &__day
    font-size: 12px
    font-weight: 600
    color: #861fc0
    margin-bottom: 5px
    text-transform: uppercase

  &__header
    font-size: 20px
    line-height: 24px
    font-weight: 600
    margin-bottom: 21px

  &__part
    font-size: 16px
    line-height: 24px
    color: #79747c
    margin-bottom: 20px
    @media (max-width $breakpoint-sm - 1)
      margin-bottom: 12px

    &:before
      content: ''
      display: inline-block
      vertical-align: middle
      width: 5px
      height: 5px
      border-radius: 50%
      background: #9200c7
      margin-left: 2px
      margin-right: 6px

  &__button
    text-align: center