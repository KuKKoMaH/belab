.results
  padding: 75px 0 60px
  @media (max-width $breakpoint-sm - 1)
    padding: 40px 0 30px

  &:before, &:after
    content:''
    background: #fff
    z-index: 1

  &__title
    margin-bottom: 21px

  &__subtitle
    margin-bottom: 75px
    @media (max-width $breakpoint-sm - 1)
      margin-bottom: 30px

  &__items
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-around

  &__item
    width: 33%
    margin-bottom: 60px
    min-width: 150px
    @media (max-width $breakpoint-sm - 1)
      margin-bottom: 30px

  &__icon
    height: 70px
    @media (max-width $breakpoint-sm - 1)
      height: 50px

    &:after
      content: ''
      display: block
      margin: 0 auto

    &--1:after
      background: url(../../img/sprite-result-1.svg)
    &--2:after
      background: url(../../img/sprite-result-2.svg)
    &--3:after
      background: url(../../img/sprite-result-3.svg)
    &--4:after
      background: url(../../img/sprite-result-4.svg)
    &--5:after
      background: url(../../img/sprite-result-5.svg)
    &--6:after
      background: url(../../img/sprite-result-6.svg)

  &__text
    text-align: center
    font-size: 16px
    line-height: 24px
    color: #79747c