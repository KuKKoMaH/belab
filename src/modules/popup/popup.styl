.popup
  &__wrapper
    position: relative
    max-width: 550px
    margin: 0 auto
    background: #25162D
    padding: 35px 80px
    color: #ffffff
    @media (max-width: 580px)
      padding: 20px 32px

    .mfp-close
      right: 8px
      top: 8px

  &__title
    font-size: 32px
    line-height: 1.2
    margin-bottom: 10px

  &__subtitle
    margin-bottom: 35px

  &__row
    display: flex
    margin: 0 -15px 30px
    @media (max-width: 580px)
      flex-direction: column
    > *
      flex: 1
      margin-bottom: 8px